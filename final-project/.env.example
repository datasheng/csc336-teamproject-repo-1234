# ===========================================
# Campus Events Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For local development AND deployment

# -------------------------------------------
# DATABASE (Neon PostgreSQL) - REQUIRED
# -------------------------------------------
# Get these from your Neon dashboard: https://console.neon.tech
DB_URL=jdbc:postgresql://ep-xxxxx.region.aws.neon.tech/campus_events?sslmode=require
DB_USERNAME=your_neon_username
DB_PASSWORD=your_neon_password

# -------------------------------------------
# BACKEND SECURITY - REQUIRED
# -------------------------------------------
# JWT secret for authentication tokens
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-64-characters-long-for-security

# JWT token expiration in milliseconds (default: 24 hours)
JWT_EXPIRATION_MS=86400000

# -------------------------------------------
# CORS CONFIGURATION - REQUIRED FOR DEPLOYMENT
# -------------------------------------------
# Frontend URL(s) allowed to access the API
# For local dev: http://localhost:5173
# For production: https://your-frontend-domain.run.app
FRONTEND_URL=http://localhost:5173

# -------------------------------------------
# FRONTEND BUILD CONFIGURATION
# -------------------------------------------
# Backend API URL (used at build time for Vite)
# For local dev: http://localhost:8080/api
# For production: https://your-backend-domain.run.app/api
VITE_API_URL=http://localhost:8080/api

# -------------------------------------------
# GOOGLE CLOUD (for pub/sub integration)
# -------------------------------------------
# GCP_PROJECT_ID=your-gcp-project-id
# PUBSUB_TOPIC=event-updates
# PUBSUB_SUBSCRIPTION=event-updates-sub
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# -------------------------------------------
# OPENAI API (for AI features)
# -------------------------------------------
# OPENAI_API_KEY=your-openai-api-key-here
# VITE_OPENAI_API_KEY=your-openai-api-key-here-for-frontend